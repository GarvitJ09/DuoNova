# =============================================================================
# DuoNova Resume Processing - Environment Configuration Template  
# =============================================================================
# 
# Instructions:
# 1. Copy this file to .env in the project root
# 2. Replace all placeholder values with your actual configuration
# 3. Never commit .env file to version control
#
# =============================================================================

# -----------------------------------------------------------------------------
# MongoDB Database Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Get from: https://cloud.mongodb.com/
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=ATS-Checker
MONGODB_DATABASE=ats_checker

# -----------------------------------------------------------------------------
# LLM Provider API Keys (AT LEAST ONE REQUIRED)
# -----------------------------------------------------------------------------
# OpenAI API Key - Get from: https://platform.openai.com/api-keys
# Best for: Maximum accuracy, complex documents, file processing
OPENAI_API_KEY=your_openai_api_key_here

# Groq API Key - Get from: https://console.groq.com/keys  
# Best for: Fast processing, cost optimization, text analysis
GROQ_API_KEY=your_groq_api_key_here

# Anthropic API Key - Get from: https://console.anthropic.com/
# Future use - not yet implemented
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# -----------------------------------------------------------------------------
# AWS S3 Configuration (OPTIONAL)
# -----------------------------------------------------------------------------
# Only needed if you want to store files in S3
# Get from: AWS Console > IAM > Users > Security credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=your_s3_bucket_name

# -----------------------------------------------------------------------------
# FastAPI Server Configuration
# -----------------------------------------------------------------------------
DEBUG=True
HOST=0.0.0.0
PORT=8000

# -----------------------------------------------------------------------------
# Security Configuration  
# -----------------------------------------------------------------------------
# Generate a strong secret key for session management
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_for_jwt_or_sessions
ALGORITHM=HS256

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,docx

# -----------------------------------------------------------------------------
# Session Configuration
# -----------------------------------------------------------------------------
SESSION_EXPIRE_HOURS=24

# -----------------------------------------------------------------------------
# Processing Configuration
# -----------------------------------------------------------------------------
# DEFAULT_PROCESSING_MODE: "hybrid" (fast, cost-effective) or "complete_llm" (most accurate)
DEFAULT_PROCESSING_MODE=hybrid

# PROVIDER_PRIORITY: Comma-separated list in order of preference
# Options: groq, openai, anthropic
PROVIDER_PRIORITY=groq,openai,anthropic

# ENABLE_COST_OPTIMIZATION: Automatically choose cheaper providers when possible
ENABLE_COST_OPTIMIZATION=true

# ENABLE_AUTO_FALLBACK: Automatically try other providers if one fails
ENABLE_AUTO_FALLBACK=true
